        "//#build:ts": {
            "outputs": ["packages/**/dist"]
        },
        "build": {
            "outputs": ["dist/**/*", ".next/**/*"],
            "dependsOn": ["^build"]
        },
        "topo": {
            "dependsOn": ["^topo"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        }
    }
}
