                "**/*.graphqls",
                "**/*.gs",
                "**/*.handlebars",
                "**/*.har",
                "**/*.hbs",
                "**/*.hta",
                "**/*.htm",
                "**/*.html",
                "**/*.html.hl",
                "**/*.ice",
                "**/*.importmap",
                "**/*.inc",
                "**/*.jake",
                "**/*.javascript",
                "**/*.js",
                "**/*.js.flow",
                "**/*.jsb",
                "**/*.jscad",
                "**/*.jsfl",
